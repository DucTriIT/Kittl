{
  "manifest_version": 3,
  "name": "Tool for Kittl",
  "version": "1.0.0",
  "description": "Auto replace text and save the result as png",
  "permissions": ["activeTab","downloads"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Toolkit for Kittl",
    "default_popup": "popup.html",
    "default_icon": {
        "16": "16.png",
        "32": "32.png",
        "48": "48.png",
        "128": "128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*.kittl.com/*"],
      "js": ["content.js","fabric.min.js"]
    }
  ],
  "icons": {
    "16": "16.png",
    "32": "32.png",
    "48": "48.png",
    "128": "128.png"
  },
  "web_accessible_resources": [{
    "matches": ["https://*.kittl.com/*"],
    "resources": ["banner.png","kittl.html"]
  }
  ],
  "content_security_policy":{
    "script-src": ["'self'", "'unsafe-eval'"],
    "object-src": ["'self'"]
  }
}
